<!--pages/mine/settings/getLocation/getLocation.wxml-->
<view>
  <view>
    <input name="mobile" placeholder="请输入需要查询的手机号码" bindinput='mobileInput' />
    <button bindtap='formSubmit'>查询</button>
  </view>
  <view class="img_box">
    <map id="map" longitude="{{longitude}}" scale="17" latitude="{{latitude}}" markers="{{markers}}" style="width: 100%; height: 500px;"></map>
  </view>
</view>